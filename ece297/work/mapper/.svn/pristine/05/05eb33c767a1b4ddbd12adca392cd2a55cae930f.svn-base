//Alternative for pressing a button for subway, poi, find, and change map
void act_on_key_press(char key_pressed, int keysym){
    (void)keysym;
    if (key_pressed == 'c'){
        change_map(*draw_screen);
    }
    if (key_pressed == 'f'){
        find(*draw_screen);
    }
    if (key_pressed == 's'){
        subway(*draw_screen);
    }
    if (key_pressed == 'p'){
        show_poi(*draw_screen);
    }
}
